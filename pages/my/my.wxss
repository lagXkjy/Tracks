/* pages/my/my.wxss */
.header{
  height: 200rpx;
  background: #014099;
  position: relative;
}
.header>image{
  height: 100%;
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.header_con{
  padding: 50rpx 45rpx;
  display: flex;
  align-items: center;
  position: relative;
  z-index: 10;
}
.header_con>image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
  margin-right: 20rpx;
}
.name{
  height: 100rpx;
  color: #fff;
}
.name view{
  /* margin:10rpx 0; */
  height: 50rpx;
  line-height: 50rpx;
}
.name view:nth-child(1){
  font-size: 36rpx;
  font-weight: bold;
}
.name view:nth-child(2){
  font-size: 26rpx;
}
.listcon{
  margin-top: 20rpx;
  border-top: 1rpx solid #e5e5e5;
}
.list{
  height: 100rpx;
  padding: 0 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #e5e5e5;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #000;
  font-size: 30rx;
}
.list image{
  width: 15rpx;
  height: 26rpx;
}