/* pages/index/index.wxss */

.search_box {
  width: 100%;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  position: relative;
  padding: 0 30rpx;
  box-sizing: border-box;
  color: #787878;
}

.search_box input {
  width: 380rpx;
  height: 60rpx;
  background: #f0f2f5;
  margin: 0 auto;
  padding-left: 10rpx;
  border: 1rpx solid #e0e0e0;
}
.select{
  width: 171rpx;
  height: 60rpx;
  border: 1rpx solid #e0e0e0;
  display: flex;
  align-items: center;
  padding-left: 10rpx;
  margin-right: 14rpx;
  position: relative;
}
.title{
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
}
.title>image{
  width: 17rpx;
  height: 11rpx;
  margin-left: 20rpx;
}
.option{
  background: #fff;
  width: 100%;
  padding: 0 10rpx;
  border: 1rpx solid #e0e0e0;
  box-sizing: border-box;
  position: absolute;
  top: 60rpx;
  left: 0;
}
.option>view{
  padding: 10rpx 0;
}
.sousuo{
  width: 90rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: #014099;
  color: #fff;
  border-radius: 10rpx;
  margin-left: 13rpx;
}
.Record_box {
  background: #fff;
  margin-top: 20rpx;
}

.record_con {
  padding: 0 30rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.business {
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #e0e0e0;
  padding: 20rpx 0;
  font-size: 32rpx;
  /* font-weight: bold; */
}

.business image {
  width: 35rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.details {
  padding: 35rpx 0 15rpx 0;
  display: flex;
  flex-wrap: wrap;
  color: #4a4a4a;
  font-size: 26rpx;
}

.details view {
  width: 50%;
  margin-bottom: 20rpx;
}

.button {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 15rpx 20rpx;
}

.button view {
  height: 40rpx;
  border: 1rpx solid #014099;
  color: #014099;
  padding: 10rpx 15rpx;
  margin: 0 8rpx;
  border-radius: 5rpx;
}
